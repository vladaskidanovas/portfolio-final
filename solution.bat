@ECHO OFF
:BEGIN
CLS

set DIR=e:
cd %DIR%\WEBDEV\Homestead

CHOICE /N /C:12345 /M "Vagrant (1 - UP, 2 - HALT, 3- RELOAD, 4 - PROVISON, 5 - SSH )"%1
IF ERRORLEVEL ==5 GOTO SSHTUNEL
IF ERRORLEVEL ==4 GOTO PROVISION
IF ERRORLEVEL ==3 GOTO RELOAD
IF ERRORLEVEL ==2 GOTO HALT
IF ERRORLEVEL ==1 GOTO UP
GOTO END

:HALT
ECHO Vagrant is halting...
vagrant halt
GOTO END

:UP
ECHO Launching VAGRANT...
vagrant up
GOTO END

:RELOAD
ECHO RELOADING...
vagrant reload
GOTO END

:PROVISON
ECHO PROVISION...
vagrant provison
GOTO END

:SSHTUNEL
ECHO CONNECTING THROUGH SSH
vagrant ssh
GOTO END

:END
pause

